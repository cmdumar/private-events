<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Private Events", root_path, class: "navbar-brand" %>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item active">
            <%= link_to current_user.username, user_path(current_user.id), class:"btn btn-success mx-1"%>
            </li>
            <li class="nav-item active">
              <%= link_to "New event", new_event_path, class:"btn btn-primary mx-1"%>
            </li>
            <li class="nav-item active">
              <%= link_to "Sign out", destroy_path(session), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-warning mx-1" %>
            </li>
          <% end %>
           <% unless logged_in? %>
            <li class="nav-item active">
              <%= link_to "Login", login_path, class: "btn btn-primary mt-1 mx-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path, class: "btn btn-primary mt-1 mx-1" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
