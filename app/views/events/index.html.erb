<h2> Past events</h2>

<ul>
  <% @past_events.each do | event | %>
    <li>
      <h2>
        <%= event.title %>
      </h2>
      <%= event.description %>
      <%= event.date %>
    </li>
  <% end %>
</ul>

<h2> Upcoming events</h2>

<ul>
  <% @upcoming_events.each do | event | %>
    <li>
      <h2>
        <%= event.title %>
      </h2>
      <%= event.description %>
      <%= event.date %>
    </li>
  <% end %>
</ul>